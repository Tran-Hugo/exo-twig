{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des articles</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identifiant</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Créé le</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{post.id}}</td>
                <td>{{post.slug}}</td>
                <td>{{post.title}}</td>
                <td>{{post.excerpt}}</td>
                <td>{{post.createdAt}}</td>
                <td>
                    <a href="{{path('post_item',{id:post.id})}}" class="btn btn-info"><i class="fas fa-pen"></i>Détail</a>
                    
                    {# <a href="post/{{post.id}}" class="btn btn-info"><i class="fas fa-pen"></i>Détail</a> #}
                </td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>
{% endblock %}
