{% extends 'base.html.twig' %}
{% block body %}
    <form method="post" action="{{path('login')}}">
        <div>
            <label>Login</label>
            <input type="text" name="_username" class="form-control" placeholder="Entrez votre login">
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="_password" class="form-control" placeholder="Entrez votre mot de passe">
        </div>
        <button type="submit" class"btn btn-primary col-12">Connectez-vous</button>
    </form>
{% endblock %}
