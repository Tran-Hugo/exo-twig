{% extends 'base.html.twig' %}

{% block title %}Hello autoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des articles</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modèle</th>
                <th>Puissance</th>
                <th>Prix</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for auto in autos %}
            <tr>
                <td>{{auto.id}}</td>
                <td>{{auto.marque}}</td>
                <td>{{auto.modele}}</td>
                <td>{{auto.puissance}} ch</td>
                <td>{{auto.prix | format_currency('EUR')}}</td>
                <td><img src="{{ asset('' ~ auto.image)}}"></td>
                <td>
                    <a href="{{path('auto_item',{id:auto.id})}}" class="btn btn-info"><i class="fas fa-pen"></i>Détail</a>
                    
                    {# <a href="auto/{{auto.id}}" class="btn btn-info"><i class="fas fa-pen"></i>Détail</a> #}
                </td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>
{% endblock %}
